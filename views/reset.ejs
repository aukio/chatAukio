
<div id="aukio-chat">
      <h2>
        Password reset
      </h2>
     <% include ./partials/messages %>

      <form method="POST">
        <div>
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div>
          <label for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <button  class="normalButton" ftype="submit">
          Update Password
        </button>
      </form>
            <div class="links">
      <p><a href="/users/login">Login</a></p>
      </div>
    </div>